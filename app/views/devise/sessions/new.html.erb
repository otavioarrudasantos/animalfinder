<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
      <br/>
      <br/>
      
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col"></div>
          <div class="col">
            <h2>Log in</h2>

            <div class="mb-3">
              <%= f.label :email, class: "form-label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"nome@exemplo.com" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, class: "form-label" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Log in", class:"btn btn-outline-secondary"%>
            </div>
          </div>
      </div>
  </div>
<% end %>
<br/>
<br/>
<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col"></div>
    <div class="col">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
